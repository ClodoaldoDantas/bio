---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a class="link" href={href} target="_blank" rel="noopener noreferrer">
  <slot />
</a>

<style lang="scss">
  .link {
    max-width: 320px;
    width: 100%;
    height: 3.5rem;
    border-radius: 6px;

    background-color: var(--violet-600);
    color: var(--zinc-50);
    font-size: 1rem;
    font-weight: 500;

    display: flex;
    align-items: center;
    justify-content: center;

    transition: all 0.2s;

    &:hover {
      background-color: var(--violet-700);
    }
  }
</style>
