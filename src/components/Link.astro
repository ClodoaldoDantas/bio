---
interface Props {
  href: string;
  icon: string;
}

const { href, icon } = Astro.props;
---

<a class="link" href={href} target="_blank" rel="noopener noreferrer">
  <img src={icon} />
  <slot />
</a>

<style lang="scss">
  .link {
    max-width: 320px;
    width: 100%;
    height: 3.5rem;
    border-radius: 6px;

    background-color: var(--violet-600);
    color: var(--zinc-50);
    font-size: 1rem;
    font-weight: 500;

    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;

    transition: all 0.2s;

    &:hover {
      background-color: var(--violet-700);
    }

    img {
      filter: brightness(0) invert(1);
    }
  }
</style>
